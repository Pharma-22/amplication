{
  "name": "package-manager",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/package-manager/src",
  "projectType": "application",
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/package-manager/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/packages/package-manager"],
      "options": {
        "jestConfig": "packages/package-manager/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/package-manager",
        "main": "packages/package-manager/src/main.ts",
        "tsConfig": "packages/package-manager/tsconfig.app.json",
        "generatePackageJson": true,
        "compiler": "tsc",
        "target": "node",
        "webpackConfig": "{projectRoot}/webpack.config.js"
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "package-manager:build",
        "inspect": true,
        "port": 7010,
        "watch": true
      },
      "configurations": {
        "production": {
          "buildTarget": "package-manager:build:production"
        }
      }
    },
    "package:container": {
      "executor": "@nx-tools/nx-container:build",
      "options": {
        "push": false,
        "tags": ["amplication/build-manager:latest"],
        "build-args": ["GIT_REF_NAME=latest-local", "GIT_SHA=unicorn-ðŸ¦„-sha"]
      },
      "configurations": {
        "production": {
          "build-args": ["GIT_REF_NAME=${GIT_REF_NAME}", "GIT_SHA=${GIT_SHA}"]
        }
      }
    },
    "deploy:container": {
      "executor": "nx:run-commands"
    }
  },
  "tags": []
}
